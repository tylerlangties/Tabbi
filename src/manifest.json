{
  "name": "Tabbi",
  "description": "Meet Tabbi! A reliable and lightweight chrome extension for searching and sorting open tabs.",
  "version": 1.1,
  "permissions": ["storage", "tabs", "bookmarks", "declarativeContent", "activeTab"],
  "manifest_version": 2,
  "icons": {
    "48": "icons/Tabbi_48.png",
    "128": "icons/Tabbi_128.png"
  },
  "browser_action": {
    "default_title": "Tabbi",
    "default_popup": "popup/popup.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      }
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  }
}
